<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.synthesizer.Views.SpeakerController"
      minHeight="100.0" minWidth="100.0"
      maxWidth="300" spacing="10" alignment="CENTER"
      style="-fx-border-color:black" fx:id="speakerControl" onDragDetected="#drag" id="speakerControl">
    <padding><Insets left="10" top="10" bottom="10" right="10"/></padding>
    <children>
        <HBox spacing="20" minWidth="35" minHeight="35">
            <padding><Insets left="20" top="20" bottom="20" right="20"/></padding>
        <Circle id="audioJack" fx:id="audioJack" styleClass="audioJack" radius="10"/>
        <Label fx:id="label" text="Speaker" />
        </HBox>
        <Button id="playButton" fx:id="playButton" text="play"/>
    </children>
</VBox>
